<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>
<form id="article_merge_form" method="post" action="/admin/content/merge/<%= @article.id %>">
  <div>
    <h4>Merge Articles</h4>
    <div>
      <label for="article_merge_with">Article ID</label>
      <input id="article_merge_with" type="text" name="merge_with">
    </div>
    <input type="submit" value="Merge">
  </div>
</form>
